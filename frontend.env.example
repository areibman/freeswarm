# Frontend Environment Configuration
# Copy this file to .env.local and update with your values

# ==========================================
# Backend API Configuration
# ==========================================
# URL of your backend server
NEXT_PUBLIC_API_URL=http://localhost:3001

# WebSocket URL (usually same as API URL)
NEXT_PUBLIC_WS_URL=http://localhost:3001

# ==========================================
# GitHub Configuration (Legacy - for direct GitHub API access)
# ==========================================
# Only needed if you want to bypass the backend and connect directly to GitHub
# NEXT_PUBLIC_GITHUB_MODE=api
# NEXT_PUBLIC_GITHUB_TOKEN=your_github_personal_access_token
# NEXT_PUBLIC_GITHUB_OWNER=your-github-username-or-org
# NEXT_PUBLIC_GITHUB_REPO=your-repository-name
# NEXT_PUBLIC_GITHUB_API_URL=https://api.github.com

# ==========================================
# Authentication (GitHub OAuth via NextAuth)
# ==========================================
# URL of your deployed frontend (or http://localhost:3000 during development)
NEXTAUTH_URL=http://localhost:3000

# A random long string used to sign NextAuth JWTs
NEXTAUTH_SECRET=replace-with-random-secret

# GitHub OAuth App credentials
GITHUB_CLIENT_ID=your_github_oauth_client_id
GITHUB_CLIENT_SECRET=your_github_oauth_client_secret

# ==========================================
# Feature Flags
# ==========================================
# Enable WebSocket for real-time updates
NEXT_PUBLIC_ENABLE_WEBSOCKET=true

# Enable auto-refresh
NEXT_PUBLIC_AUTO_REFRESH=true

# Refresh interval in milliseconds (60000 = 1 minute)
NEXT_PUBLIC_REFRESH_INTERVAL=60000

# ==========================================
# UI Configuration
# ==========================================
# Default theme (light or dark)
NEXT_PUBLIC_DEFAULT_THEME=light

# Show debug information in console
NEXT_PUBLIC_DEBUG=false

# ==========================================
# Analytics (Optional)
# ==========================================
# Google Analytics
# NEXT_PUBLIC_GA_TRACKING_ID=UA-XXXXXXXXX-X

# Posthog
# NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key
# NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com
